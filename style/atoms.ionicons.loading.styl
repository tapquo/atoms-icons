.icon
  &.loading-a:before
    content: "\f29a"

  &.loading-b:before
    content: "\f29b"

  &.loading-c:before
    content: "\f29c"

  &.loading-d:before
    content: "\f29d"

  &.loading-e:before
    content: "\f1a2"

  &.loading-a, &.loading-b, &.loading-c, &.loading-d, &.loading-e,&.looping, &.refreshing, &.ios7-reloading
    -webkit-animation: spin 1s infinite linear
    -moz-animation: spin 1s infinite linear
    -o-animation: spin 1s infinite linear
    animation: spin 1s infinite linear

// @-moz-keyframes spin
